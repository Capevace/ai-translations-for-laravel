{
    "name": "mateffy/ai-translations",
    "description": "Manage your Laravel translations using AI! Auto translate and more!",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Mateffy\\AiTranslations\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Lukas Mateffy",
            "email": "github@mateffy.me"
        }
    ],
    "require": {
        "mateffy/llm-magic": "dev-main",
        "spatie/laravel-package-tools": "^1.16"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mateffy\\AiTranslations\\AiTranslationsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../llm-magic"
        }
    ]
}
